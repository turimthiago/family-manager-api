{
  "compilerOptions": {
    "outDir": "build",
    "rootDirs": [
      "src"
    ],
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
}
